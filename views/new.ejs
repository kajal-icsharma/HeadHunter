<title>Post a Job - HeadHunters</title>
<link rel="stylesheet" href="/stylesheets/new.css">



<%- include('./partials/header.ejs') %>

<div style="height: 6rem; width: 100%; background: none;"></div>


<div class="row">
    <div class="col-6 m-auto">
        <h1>NEW FORM TO POST A JOB</h1>
        <form action="/jobs" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Company Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Company Location</label>
                <input type="text" class="form-control" id="address" name="address" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Company Logo Link</label>
                <input type="text" class="form-control" id="image" name="image" required>
            </div>

            <div class="mb-3">
                <label for="type" class="form-label">Job Type</label>
                <select name="type" id="type" class="form-control" required >
                    <option value="Full-Time">Full-Time</option>
                    <option value="Part-Time">Part-Time</option>
                    <option value="Temporary">Temporary</option>
                    <option value="Seasonal">Seasonal</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="category" class="form-label">Job Category</label>
                <select name="category" id="category" class="form-control" required>
                    <option value="Marketing">Marketing</option>
                    <option value="Software Engineer">Software Engineer</option>
                    <option value="Program Developer">Program Developer</option>
                    <option value="Project Management">Project Management</option>
                    <option value="Business Development">Business Development</option>
                    <option value="Sales and Communication">Sales and Communication</option>
                    <option value="Teaching and Education">Teaching and Education</option>
                    <option value="Design and Creative">Design and Creative</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="package" class="form-label">Job Stipend</label>
                <input type="text" class="form-control" id="package" name="package" required>
            </div>
            <div class="mb-3">
                <label for="cgpa" class="form-label">Min CGPA Required</label>
                <input type="number" class="form-control" id="cgpa" name="cgpa" min="0" max="10" step="0.01" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Job Description</label>
                <input type="text" class="form-control" id="description" name="description" required></input>
            </div>

            <div class="mb-3">
                <label for="responsibilities" class="form-label">Responsibilities</label>
                <input type="text" class="form-control" id="responsibilities" name="responsibilities" required></input>
            </div>

            <div class="mb-3">
                <label for="requirements" class="form-label">Minimum Requirements</label>
                <input type="text" class="form-control" id="requirements" name="requirements" required></input>
            </div>

            <div class="mb-3">
                <label for="deadline" class="form-label">Application deadline</label>
                <input type="date" class="form-control" id="deadline" name="deadline" required>
            </div>

            <div class="mb-3">
                <label for="experience" class="form-label">Experience</label>
                <select name="experience" id="experience" class="form-control" required>
                    <option value="Entry Level">Entry Level</option>
                    <option value="Mid Level">Mid Level</option>
                    <option value="Mid-Senior Level">Mid-Senior Level</option>
                    <option value="Top Level">Top Level</option>
                </select>
            </div>
            

            <div class="mb-3">
                <label for="companySize" class="form-label">Company Size</label>
                <input type="text" class="form-control" id="companySize" name="companySize" required>
            </div>

            <div class="mb-3">
                <label for="companyPhone" class="form-label">Company Phone</label>
                <input type="text" class="form-control" id="companyPhone" name="companyPhone" required>
            </div>
            
            <div class="mb-3">
                <label for="companyEmail" class="form-label">Company Email</label>
                <input type="text" class="form-control" id="companyEmail" name="companyEmail" required>
            </div>

            <div class="mb-3">
                <label for="companyWebsite" class="form-label">Company Website</label>
                <input type="text" class="form-control" id="companyWebsite" name="companyWebsite" required>
            </div>
            
            <div>
                <input class="btn btn-primary" type="submit" value="Add a new job">
            </div>
        </form>
    </div>
</div>


<script>
    const myNav = document.querySelector(".my-navbar");
    myNav.classList.add("scrolled");
</script>
<%- include('./partials/footer.ejs') %>