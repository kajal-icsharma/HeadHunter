	<!-- Jobs Start -->
	<div class="container-xxl py-5 text-dark jobs-container">
		<div class="container">
			<h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Featured Job Listing</h1>
			<div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
				
				<div class="tab-content">
					<div id="tab-1" class="tab-pane fade show p-0 active">

					<% recentJobs.forEach(function(job){ %>

						<div class="job-item p-4 mb-4">
							<div class="row g-4">
								<div class="col-sm-12 col-md-8 d-flex align-items-center">
									<img class="flex-shrink-0 img-fluid" src="<%= job.image %>" alt="" style="width: 5rem; height: auto;">
									<div class="text-start ps-4">
										<h5 class="mb-3" style="display: inline;"><%= job.name%> | </h5> <h6 style="display: inline;"><%= job.category %></h6>
										<br>
										<span class="text-truncate me-3"><i class="fa fa-map-marker-alt me-2" ></i><%= job.address %></span>
										<span class="text-truncate me-3"><i class="far fa-clock me-2"></i><%= job.type %></span>
										<span class="text-truncate me-0"><i class="far fa-money-bill-alt me-2"></i><%= job.package %></span>
									</div>
								</div>
								<div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
									<div class="d-flex mb-3">
										<a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart"></i></a>
										<a class="btn btn-primary" href="/jobs/<%= job._id %>" style="background: #00B074; border: none;">Read More</a>
									</div>
									<small class="text-truncate"><i class="far fa-calendar-alt me-2"></i><%= job.deadline %></small>
								</div>
							</div>
						</div>
					<% }); %>

					<a class="btn btn-primary py-3 px-5 more-jobs" href="/jobs" style="background: #00B074; border: none;">Browse More Jobs</a>
					</div>
				</div>
			</div>
		</div>
	</div>
