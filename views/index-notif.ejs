<div class="container-xxl py-5 text-dark jobs-container">
    <div class="container">
        <div class="waviy mb-4" style="color: black;">
            <div class="mx-auto">
                <span style="--i:1; color: black;">N</span>
                <span style="--i:2; color: black;">O</span>
                <span style="--i:3; color: black;">T</span>
                <span style="--i:4; color: black;">I</span>
                <span style="--i:5; color: black;">F</span>
                <span style="--i:6; color: black;">I</span>
                <span style="--i:7; color: black;">C </span>
                <span style="--i:9; color: black;">A</span>
                <span style="--i:10; color: black;">T</span>
                <span style="--i:12; color: black;">I</span>
                <span style="--i:13; color: black;">O</span>
                <span style="--i:14; color: black;">N</span>
                <span style="--i:15; color: black;">S</span>
            </div>
            
            
        </div>
        <a class="add-icon" href="/notifications/new" style="text-decoration: none;">
          <lord-icon
            class="mb-3"
            src="https://cdn.lordicon.com/xzksbhzh.json"
            trigger="hover"
            colors="primary:#08a88a,secondary:#d1fad7"
            style="width:4rem;height:4rem">
          </lord-icon>
          <span class="text" style="color: black;">Post a New Notification</span>
        </a>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">

                <% allNotifs.forEach(function(job){ %>

                    <div class="job-item p-4 mb-4 rounded">
                        <div class="row g-4">
                            <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                <img class="flex-shrink-0 img-fluid" src="<%= job.image %>" alt="" style="width: 5rem; height: auto;">
                                <div class="text-start ps-4">
                                    <h5 class="mb-3" style="display: inline;"><%= job.body%>
                                    <br>
                                    <span class="text-truncate me-3"><%= job.author %></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                <div class="d-flex ">
                                    
                                    <form action="/notifications/<%= job._id %>?_method=DELETE" method="post">
                                        <input class="btn btn-primary" style="background: #971200; border: none;" type="submit" value="Delete">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>

                </div>
            </div>
        </div>
    </div>
</div>


