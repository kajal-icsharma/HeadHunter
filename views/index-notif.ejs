<title>Notifications - HeadHunters</title>


<style>
body{
  background-image: url('/img/cool-background.png');
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

    .notification-container {
  width: 500px;
  margin: 0 auto;
  padding: 20px;
  background-color: #26A69A;
  border-radius: 10px;
  
}

.notifications {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

.notification-body {
  margin: 0 0 10px 0;
}

.notification-author {
  font-size: 12px;
  color: #999;
}

.notification-image {
  width: 100px;
  height: 100px;
  float: left;
  margin-right: 10px;
}

.notification-actions {
  text-align: right;
}

.delete-notification {
  background-color: red;
  color: white;
  padding: 5px 10px;
  border: none;
  cursor: pointer;
}

.notification-body h2 {
  color: white;
  font-size: 16px;
  font-weight: bold;
}

.notification-body p {
  color: white;
  font-size: 14px;
}

.notification-image {
  border-radius: 50%;
}

.notification-actions button {
  background-color: transparent;
  border: 1px solid #26A69A;
  color: #26A69A;
  padding: 5px 10px;
  cursor: pointer;
}

.notification-actions button:hover {
  background-color: #26A69A;
  color: white;
}

.job-item{
  background: rgba( 255, 255, 255, 0.25 );
box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
backdrop-filter: blur( 4px );
-webkit-backdrop-filter: blur( 4px );
border-radius: 10px;
border: 1px solid rgba( 255, 255, 255, 0.18 );
}

</style>


<%- include('./partials/header.ejs') %>

<div style="height: 6rem; width: 100%; background: none;"></div>


